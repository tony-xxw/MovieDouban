<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mvp.wyyne.douban.moviedouban">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.MainActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailMovieActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".home.BaseActivity"/>
        <activity
            android:name=".detail.cast.CastArticleActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".detail.stills.StillsActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".detail.stills.AllStillsActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".detail.photo.PhotoActivity"
            android:launchMode="singleTop"
            />

        <activity
            android:name=".detail.cast.CastDetailActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".detail.photo.CastPhotoActivity"
            android:launchMode="singleTop"
            />
    </application>

</manifest>